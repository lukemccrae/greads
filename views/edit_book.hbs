  <textarea type="text" name="title" placeholder="Title" value="">{{title}}</textarea>
  <br><br>
  Genre<br>
  <textarea type="text" name="genre" placeholder="Genre" value="">{{genre}}</textarea>
  <br><br>
  Description<br>
  <textarea type="text" name="description" value="" placeholder="Description">{{description}}</textarea>
  <br><br>
  Cover<br>
  <textarea type="text" name="cover" value="" placeholder="Cover">{{cover_url}}</textarea>
  <br><br>
  <input type="submit" value="add book">
  <button type="submit">update book</button>
</form>


